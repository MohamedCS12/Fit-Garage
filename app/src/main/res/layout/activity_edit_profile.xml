<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_base"
            android:theme="@style/ToolbarTheme"
            app:titleTextColor="@color/white" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:onClick="onButtonSaveClicked" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:background="@color/pink_base" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/title_edit_profile"
        android:textColor="@color/purple_base"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:text="Username"
        android:textColor="@color/purple_base"
        android:textSize="18sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_profile" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginEnd="35dp"
        android:text="Username"
        android:textColor="?android:textColorHint"
        android:textSize="18sp"
        android:gravity="right|center_vertical"
        android:backgroundTint="@color/transparent"
        android:drawableRight="@drawable/ic_goto"
        android:drawablePadding="2dp"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_username"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="-5dp"
        android:background="@color/pink_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:text="ID"
        android:textColor="@color/purple_base"
        android:textSize="18sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username" />

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="50dp"
        android:text="0"
        android:textColor="?android:textColorHint"
        android:textSize="18sp"
        android:gravity="right|center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tv_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_id"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="-5dp"
        android:background="@color/pink_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_id" />

    <TextView
        android:id="@+id/tv_date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:text="Date of birth"
        android:textColor="@color/purple_base"
        android:textSize="18sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_id" />

    <TextView
        android:id="@+id/tv_dob"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginEnd="37dp"
        android:text="01 Jan 1990"
        android:textColor="?android:textColorHint"
        android:textSize="18sp"
        android:gravity="right|center_vertical"
        android:backgroundTint="@color/transparent"
        android:drawableRight="@drawable/ic_goto"
        android:drawablePadding="2dp"
        android:onClick="onTextViewDobClicked"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date_of_birth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_date_of_birth"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="-5dp"
        android:background="@color/pink_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_of_birth" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:text="Email"
        android:textColor="@color/purple_base"
        android:textSize="18sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_of_birth" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginEnd="35dp"
        android:text="username@mail.com"
        android:textColor="?android:textColorHint"
        android:textSize="18sp"
        android:gravity="right|center_vertical"
        android:backgroundTint="@color/transparent"
        android:drawableRight="@drawable/ic_goto"
        android:drawablePadding="2dp"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_email"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="-5dp"
        android:background="@color/pink_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email" />

</androidx.constraintlayout.widget.ConstraintLayout>