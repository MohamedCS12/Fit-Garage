<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutTypeActivity">

    <TextView
        android:id="@+id/tv_choose_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Choose Your Workout"
        android:textColor="@color/purple_base"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_shoulders_and_arms"
        android:layout_width="fill_parent"
        android:layout_height="111dp"
        android:text="Shoulders &amp; Arms"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:background="@drawable/btn_shoulders_and_arms"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_and_chest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_workout" />

    <Button
        android:id="@+id/btn_back_and_chest"
        android:layout_width="fill_parent"
        android:layout_height="111dp"
        android:background="@drawable/btn_back_and_chest"
        android:text="Back &amp; Chest"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/btn_abs_and_core"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_shoulders_and_arms" />

    <Button
        android:id="@+id/btn_abs_and_core"
        android:layout_width="fill_parent"
        android:layout_height="111dp"
        android:text="Abs &amp; Core"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:background="@drawable/btn_abs_and_core"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/btn_glutes_and_legs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_and_chest" />

    <Button
        android:id="@+id/btn_glutes_and_legs"
        android:layout_width="fill_parent"
        android:layout_height="111dp"
        android:text="Glutes &amp; Legs"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:background="@drawable/btn_glutes_and_legs"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_abs_and_core" />

</androidx.constraintlayout.widget.ConstraintLayout>